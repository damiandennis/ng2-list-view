{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "es2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "../dist",
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "paths": {
      "@angular/*": [
        "../../node_modules/@angular/*"
      ],
      "rxjs/*": [
        "../../node_modules/rxjs/*"
      ]
    }
  },
  "files": [
    "list-view.module.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "genDir": "../dist"
  }
}
